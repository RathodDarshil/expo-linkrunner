{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "target": "es2017",
        "module": "commonjs",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "jsx": "react-native",
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": false,
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"],
}
